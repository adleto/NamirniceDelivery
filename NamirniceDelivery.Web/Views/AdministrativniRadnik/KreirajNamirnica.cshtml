@model NamirniceDelivery.Web.ViewModels.AdministrativniRadnik.KreirajNamirnicaViewModel
@{
    ViewData["Title"] = "Kreiraj Namirnicu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="text-center row justify-content-center">
    <div class="">
        <h1>Kreiraj Novu Vrstu Namirnica</h1>

        <h4>Namirnica</h4>
        <hr />
        <div @*class="row"*@>
            <div @*class="col-md-4"*@>
                <form asp-action="KreirajNamirnica">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Naziv" class="control-label"></label>
                        <input asp-for="Naziv" class="form-control" />
                        <span asp-validation-for="Naziv" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="KategorijaId"></label>
                        <select class="form-control" asp-for="KategorijaId">
                            <option>--Odaberi kategoriju--</option>
                            @foreach (var kategorija in Model.KategorijaList)
                            {
                                <option value="@kategorija.Id">@kategorija.Naziv</option>
                            }
                        </select>
                        <span asp-validation-for="KategorijaId" class="text-danger"></span><br />
                        <a asp-action="KreirajKategoriju" asp-route-returnUrl="@Context.Request.Path">Dodaj novu kategoriju</a>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Kreiraj" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        @if (string.IsNullOrEmpty(Model.ReturnUrl))
        {
            <div>
                <a asp-action="Index">Nazad na panel</a>
            </div>
        }
        else
        {
            <div>
                <a href="@Model.ReturnUrl">Idi nazad</a>
            </div>
        }
    </div>
</div>
