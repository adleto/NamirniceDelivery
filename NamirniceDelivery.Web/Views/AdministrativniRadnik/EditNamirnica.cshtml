@model NamirniceDelivery.Web.ViewModels.AdministrativniRadnik.EditNamirnicaViewModel
@{
    ViewData["Title"] = "Edit Namirnica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center row justify-content-center">
    <div class="">
        <h1>Edit Vrsta Namirnice</h1>

        <h4>Kategorija</h4>
        <hr />
        <div @*class="row"*@>
            <div @*class="col-md-4"*@>
                <form asp-action="EditNamirnica">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <input type="hidden" asp-for="NamirnicaId" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Naziv" class="control-label"></label>
                        <input asp-for="Naziv" class="form-control" />
                        <span asp-validation-for="Naziv" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="KategorijaId"></label>
                        <select class="form-control" asp-for="KategorijaId">
                            @foreach (var kategorija in Model.KategorijaList)
                            {
                                if (kategorija.Id == Model.KategorijaId)
                                {
                                    <option selected value="@kategorija.Id">@kategorija.Naziv</option>
                                }
                                else
                                {
                                    <option value="@kategorija.Id">@kategorija.Naziv</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="KategorijaId" class="text-danger"></span><br />
                        <a asp-action="KreirajKategoriju">Dodaj novu kategoriju</a>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Edit" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        @if (string.IsNullOrEmpty(Model.ReturnUrl))
        {
            <div>
                <a asp-action="Index">Nazad na panel</a>
            </div>
        }
        else
        {
            <div>
                <a href="@Model.ReturnUrl">Idi nazad</a>
            </div>
        }
    </div>
</div>

