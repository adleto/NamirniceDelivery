@model NamirniceDelivery.Web.ViewModels.AdministrativniRadnik.PregledNamirnicaPodruznicaViewModel
@{
    ViewData["Title"] = "PregledNamirnicaPodruznica";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int brojac = 1;
}
<div class="text-center row justify-content-center">
    <div>
        <h1>Pregled Namirnica</h1>
        <br />
        <div class="row">
            <div class="col-md-12 mb-1">
                <select id="kategorijaFilter" onchange="filtrirajKategorija()" title="Filter po kategorijama">
                    <option value="0">Sve kategorije</option>
                    @foreach (var k in Model.KategorijaList)
                    {
                        if (Model.KategorijaId != 0)
                        {
                            if (k.Id == Model.KategorijaId)
                            {
                                <option selected value="@k.Id">@k.Naziv</option>
                                continue;
                            }
                        }
                        <option value="@k.Id">@k.Naziv</option>
                    }
                </select>
            </div>
        </div>
        @if (Model.NamirnicaList.Any())
        {
            <div class="row">
                <div class="col-md-12 text-right mb-1">
                    <a asp-controller="AdministrativniRadnik" asp-action="DodajNamirnicu" asp-route-returnUrl="@Context.Request.Path" class="btn btn-success" title="Dodaj novu namirnicu">+</a>
                </div>
            </div>
            <table class="table table-bordered table-responsive-lg table-striped">
                <thead>
                    <tr>
                        <td>#</td>
                        <td>Vrsta</td>
                        <td>Cijena</td>
                        <td>Cijena sa popustom</td>
                        <td>Količina na stanju</td>
                        <td>Aktivna</td>
                        <td>Akcije</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var n in Model.NamirnicaList)
                    {
                        <tr>
                            <td>@(brojac++)</td>
                            <td>@n.Namirnica.Naziv</td>
                            <td>@(n.Cijena.ToString("F") + "KM")</td>
                            <td>@((n.CijenaSaPopustom).ToString("F") + "KM")</td>
                            <td>@n.KolicinaNaStanju</td>
                            @if (n.Aktivna)
                            {
                                <td class="bg-primary">Aktivna</td>
                            }
                            else
                            {
                                <td class="bg-danger">Nektivna</td>
                            }
                            <td>
                                @if (n.Aktivna == true)
                                {
                                    <a asp-action="NamirnicaToogleStatus" asp-route-id="@n.Id">Deaktiviraj</a>
                                }
                                else
                                {
                                    <a asp-action="NamirnicaToogleStatus" asp-route-id="@n.Id">Aktiviraj</a>
                                } |
                                <a asp-controller="AdministrativniRadnik" asp-action="UkloniNamirnicaPodruznica" asp-route-id="@n.Id" asp-route-returnUrl="@Context.Request.Path">Ukloni</a> |
                                <a asp-controller="AdministrativniRadnik" asp-action="EditNamirnicaPodruznica" asp-route-namirnicaId="@n.Id" asp-route-returnUrl="@Context.Request.Path">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p><span>Trenutno ne postoji nijedna namirnica u ovoj podružnici. Kreirajte <a asp-controller="AdministrativniRadnik" asp-action="DodajNamirnicu" asp-route-returnUrl="@Context.Request.Path">novu?</a></span></p>
        }
        @if (string.IsNullOrEmpty(Model.ReturnUrl))
        {
            <div>
                <a asp-action="Index">Nazad na panel</a>
            </div>
        }
        else
        {
            <div>
                <a href="@Model.ReturnUrl">Idi nazad</a>
            </div>
        }
    </div>
</div>
<script>
    function URL_add_parameter(url, param, value){
    var hash       = {};
    var parser     = document.createElement('a');

    parser.href    = url;

    var parameters = parser.search.split(/\?|&/);

    for(var i=0; i < parameters.length; i++) {
        if(!parameters[i])
            continue;

        var ary      = parameters[i].split('=');
        hash[ary[0]] = ary[1];
    }

    hash[param] = value;

    var list = [];
    Object.keys(hash).forEach(function (key) {
        list.push(key + '=' + hash[key]);
    });

    parser.search = '?' + list.join('&');
    return parser.href;
}
    function filtrirajKategorija() {
        location.href = URL_add_parameter(location.href, 'kategorijaId', $("#kategorijaFilter").val());
    }
</script>

