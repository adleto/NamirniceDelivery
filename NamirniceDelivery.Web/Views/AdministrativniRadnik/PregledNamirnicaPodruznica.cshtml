@model NamirniceDelivery.Web.ViewModels.AdministrativniRadnik.PregledNamirnicaViewModel
@{
    ViewData["Title"] = "PregledNamirnicaPodruznica";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="modal-placeholder"></div>
<div class="text-center row justify-content-center">
    <div>
        <h1>Pregled Namirnica</h1>
        <br />
        <div class="row">
            <div class="col-md-12 mb-1">
                <select id="kategorijaFilter" onchange="filtrirajKategorija()" title="Filter po kategorijama">
                    <option value="0">Sve kategorije</option>
                    @foreach (var k in Model.KategorijaList)
                    {
                        if (Model.KategorijaId != 0)
                        {
                            if (k.Id == Model.KategorijaId)
                            {
                                <option selected value="@k.Id">@k.Naziv</option>
                                continue;
                            }
                        }
                        <option value="@k.Id">@k.Naziv</option>
                    }
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 text-right mb-1">
                <button title="Dodaj novu namirnicu" type="button" class="btn btn-success rounded" data-toggle="ajax-modal" data-target="#add-namirnicaPodruznica" data-url="@Url.Action("NamirnicaPodruznica")">
                    +
                </button>
            </div>
        </div>

        <div class="row" id="dataStorage"></div>

        <div class="row">
            <div class="col-md-12 text-left mb-1">
                <a asp-action="GetExcelNamirnicePodruznica" class="btn btn-info rounded">Export to Excel</a>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.ReturnUrl))
        {
            <div>
                <a href="@Model.ReturnUrl">Idi nazad</a>
            </div>
        }
    </div>
</div>

@section Scripts{
    <script>
        $(function () {
            var connection = new signalR.HubConnectionBuilder().withUrl("/myHub").build();

            connection.start().then(function () {
                getData();
            });

            connection.on("Repopulate", function () {
                getData();
            });
        });

        function getData() {
            filtrirajKategorija();
        }

        function filtrirajKategorija() {
            var loc = URL_add_parameter('PregledNamirnicaPodruznicaGetData', 'kategorijaId', $("#kategorijaFilter").val());
            var container = $('#dataStorage');
            $.ajax({
                url: loc,
                contentType: 'application/html ; charset:utf-8',
                type: 'GET',
                dataType: 'html'
            })
                .done(function (result) { container.empty().append(result); })
        }
    </script>
}




